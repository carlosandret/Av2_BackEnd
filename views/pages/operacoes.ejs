<div>
    <% if (operacoes.length <= 0) { %>
        <span>Não existem operações cadastradas</span>
    <% } else {%>
        <table>
        <thead>
            <th>ORD</th>
            <th>Data</th>
            <th>Código do ativo</th>
            <th>Tipo de operação</th>
            <th>Quantidade</th>
            <th>Preço unitário</th>
            <th>Valor Bruto</th>
            <th>Taxas B3</th>
            <th>Valor líquido</th>
        </thead>
            <tbody>
                    <% for (let i = 0; i < operacoes.length; i++) { %>
                        <% operacao = operacoes[i] %>
                        <tr>
                            <td>
                                <%= operacao.id %>
                            </td>
                            <td>
                                <%= operacao.data %>
                            </td>
                            <td>
                                <%= operacao.ativo %>
                            </td>
                            <td>
                                <%= operacao.tipoDeOperacao %>
                            </td>
                            <td>
                                <%= operacao.quantidade %>
                            </td>
                            <td>
                                <%= operacao.preco %>
                            </td>
                            <td>
                                <%= operacao.valorBruto %>
                            </td>
                            <td>
                                <%= operacao.taxaB3 %>
                            </td>
                            <td>
                                <%= operacao.valorLiquido %>
                            </td>
                        </tr>
                    <% } %>
            </tbody>
        </table>
    <% } %>
    
    <!-- Botão para criação de nova operação -->
    <div class="container-botoes">
        <a class="botao-link" href="/operacao/nova_operacao">Cadastrar nova operação</a>
    </div>

    <!-- Botão para editar operação pelo Id -->
    <div class="container-botoes">
        <a class="botao-link" href="#" onclick="mostrarInputEdit()">Editar operação</a>

        <div id="input-container" style="display: none; margin-top: 10px;">
            <form action="/operacao/id_edicao" method="post">
                <div>
                    <input type="number" id="operacaoId" name="idOperacao" placeholder="Digite o ID da operação" />
                    <input type="submit" value="Editar">
                </div>
            </form>
        </div>
    </div>

    <!-- Botão para deletar operação pelo Id -->
    <div class="container-botoes">
        <a class="botao-link" href="#" onclick="mostrarInputDelete()">Deletar operação</a>

        <div id="input-container-delete" style="display: none; margin-top: 10px;">
            <form action="/operacao/deletar_operacao" method="post">
                <div>
                    <input type="number" id="operacaoId" name="idOperacao" placeholder="Digite o ID da operação" />
                    <input type="submit" value="Editar">
                </div>
            </form>
        </div>
    </div>

</div>
</div>